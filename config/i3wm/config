##############################################################
##                     AUDIO
##############################################################
## Output: increase|decrease|mute|unmute.
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.local/bin/hardware-audio-output up
bindsym Ctrl+Shift+period    exec --no-startup-id ~/.local/bin/hardware-audio-output up
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.local/bin/hardware-audio-output down
bindsym Ctrl+Shift+comma     exec --no-startup-id ~/.local/bin/hardware-audio-output down
bindsym XF86AudioMute        exec --no-startup-id ~/.local/bin/hardware-audio-output toggle
## Input: Mute|unmute.
bindsym Ctrl+Shift+m exec --no-startup-id ~/.local/bin/hardware-microphone toggle
## Media: Toggle play|pause.
bindsym Ctrl+Shift+k exec "playerctl play-pause" 
bindsym Ctrl+Shift+i exec "playerctl stop" 

