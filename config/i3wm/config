####                   FLOATED WINDOWS
########################################################################
#### Get class names with: `xprop | grep WM_CLASS`
########################################################################
for_window [class="mpv"] floating enable
for_window [class="zenity"] floating enable
for_window [class="pavucontrol"] floating enable
# for_window [class="^.*"] border pixel 0 # border normal
# for_window [class="TODO: picture-on-picture"] floating enable, sticky enable, move position 0 0, resize set 400 540
# Always open steam on workspace 3
assign [class="steam"] $ws3
for_window [class="steam"] floating enable
for_window [class="^steam_app_.*"] move to workspace $ws3

